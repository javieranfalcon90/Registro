<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>{% block title %}Registro{% endblock %}</title>

    {% block stylesheets %}

        <!-- Font Awesome -->
        <link href="{{ asset('librerias/fontawesome/css/all.css') }}" rel="stylesheet"  type="text/css" />

        <!-- Tabler -->
        <link href="{{ asset('librerias/tabler/css/tabler.min.css') }}" rel="stylesheet"  type="text/css" />

        <!-- Custom -->
        <link href="{{ asset('css/style.css') }}" rel="stylesheet"  type="text/css" />

    {% endblock %}
</head>

<body class="border-top-wide border-primary d-flex flex-column theme-light">
    <div class="page page-center">
      <div class="container-tight py-4">
        <div class="text-center mb-4">
          <img src="{{ asset('img/logo.png') }}" alt="logo" width="200" class="">
        </div>

        {% if msg %}
            <div class="alert alert-danger">{{ msg }}</div>
        {% endif %}


        <form class="card card-md" autocomplete="off" action="{{ path('usuario_login') }}" method="post" novalidate="novalidate">
          <div class="card-body">
            <h2 class="card-title text-center mb-4">Introduzca sus credenciales</h2>
            <div class="mb-3">
              <label class="form-label">Usuario</label>
              <input type="text" value="{{ last_username }}" name="_username" id="inputUsername" class="form-control" required autofocus>
            </div>
            <div class="mb-2">
              <label class="form-label">
                Password
                <span class="form-label-description">
                  <a href="{{ path('app_forgot_password_request') }}">Olvidó su contraseña?</a>
                </span>
              </label>
              <div class="input-group input-group-flat">
                <input type="password" name="_password" id="inputPassword" class="form-control" required>
              </div>
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <div class="mb-2">
              <label class="form-check">
                <input type="checkbox" class="form-check-input" name="_remember_me">
                <span class="form-check-label">Recordarme en este dispositivo</span>
              </label>
            </div>
            <div class="form-footer">
              <button type="submit" class="btn btn-primary w-100">Entrar</button>
            </div>
          </div>
        </form>
      </div>
    </div>  
</body>
